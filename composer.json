{
    "name": "ushahidi/platform",
    "description": "Ushahidi Platform core and API server",
    "homepage": "http://ushahidi.com/",
    "type": "project",
    "license": "AGPL-3.0",
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "wouter/a1",
                "version": "dev-master",
                "source": {
                    "type": "git",
                    "url": "https://github.com/ushahidi/A1",
                    "reference": "origin/3.3/feature-use-password-compat"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "wouter/a2",
                "version": "dev-master",
                "source": {
                    "type": "git",
                    "url": "https://github.com/Wouterrr/A2",
                    "reference": "origin/master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "wouter/acl",
                "version": "dev-master",
                "source": {
                    "type": "git",
                    "url": "https://github.com/Wouterrr/ACL",
                    "reference": "origin/master"
                }
            }
        },
        {
            "type": "vcs",
            "url": "https://github.com/ushahidi/Aura.Di"
        }
    ],
    "require": {
        "aura/di": "dev-develop-2",
        "bodom78/kohana-imagefly": "dev-master",
        "league/oauth2-server": "~3.2.4",
        "league/flysystem": "1.1.*",
        "ircmaxell/password-compat": "~1.0.3",
        "abraham/twitteroauth": "^0.5.3",
        "kohana/core" : "3.3.*@dev",
        "kohana/cache" : "3.3.*@dev",
        "kohana/orm" : "3.3.*@dev",
        "kohana/image" : "3.3.*@dev",
        "kohana/minion" : "3.3.*@dev",
        "ohanzee/database": "~0.1.2",
        "robmorgan/phinx": "~0.4.1",
        "shadowhand/email": "~2.0.1",
        "symm/gisconverter": "~1.0.5",
        "wouter/a1": "dev-master",
        "wouter/a2": "dev-master",
        "wouter/acl": "dev-master",
        "twilio/sdk": "3.12.*",
        "vlucas/phpdotenv": "~1.0@dev",
        "zeelot/kohana-media": "1.3.*@dev",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-mcrypt": "*"
    },
    "require-dev": {
        "behat/behat": "~2.5.2",
        "behat/mink-extension": "~1.3",
        "behat/mink-goutte-driver": "~1.0",
        "fabpot/goutte": "~1.0",
        "guzzle/guzzle": "~3.9.1",
        "kohana/unittest": "3.3.*@dev",
        "phpunit/phpunit": "~3.7.37",
        "phpunit/dbunit": "~1.2.3",
        "phpspec/phpspec": "~2.1.0",
        "symfony/console": "2.6.*",
        "squizlabs/php_codesniffer": "1.5.*",
        "heroku/heroku-buildpack-php": "dev-master"
    },
    "minimum-stability": "dev",
    "config": {
        "bin-dir": "bin/",
        "github-protocols": [
            "https",
            "http",
            "git"
        ],
        "preferred-install": "dist"
    },
    "autoload": {
        "psr-4": {
            "Ushahidi\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd" : [
            "bin/phinx migrate -c application/phinx.php"
        ]
    }
}
